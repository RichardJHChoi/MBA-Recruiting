<div class="page-header">
  <h1>
    Corporates
    <a href="/corporates/new" class="btn btn btn-success">New Corporate</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Company</th>
        <th>Industry</th>
        <th>Region</th>
        <th>Actions</th>
      </tr>

      <% @corporates.each do |corporate| %>
      <tr>
        <td><%= corporate.corp_name %></td>
        <td><%= corporate.industry.industry_name if corporate.industry %></td>
        <td><%= corporate.region.region_name if corporate.region %></td>
        <td>
          <a href="/corporates/<%= corporate.id %>" class="btn btn-primary">Show</a>
          <a href="/corporates/<%= corporate.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_corporate/<%= corporate.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
