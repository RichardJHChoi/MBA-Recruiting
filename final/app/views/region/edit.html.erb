<!-- Validation failure messages -->
<% if @region.errors.any? %>
  <% @region.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Region #<%= @region.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_region/<%= @region.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for region_name -->
      <div class="form-group">
        <label for="region_name" class="control-label">
          Region name
        </label>

        <input type="text" id="region_name" name="region_name" placeholder="Region name" class="form-control" value="<%= @region.region_name %>">
      </div>

      <button class="btn btn-warning">
        Update Region
      </button>
      or
      <a href="/regions/<%= @region.id %>">Cancel</a>
    </form>
  </div>
</div>
