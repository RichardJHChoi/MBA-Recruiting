<div class="page-header">
  <h1>
    Industry
    <a href="/industry/new" class="btn btn-lg btn-success">New Industry</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Industry name</th>
        <th>Actions</th>
      </tr>

      <% @industry.each do |industry| %>
      <tr>
        <td><%= industry.industry_name %></td>
        <td>
          <a href="/industry/<%= industry.id %>" class="btn btn-primary">Show</a>
          <a href="/industry/<%= industry.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_industry/<%= industry.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
