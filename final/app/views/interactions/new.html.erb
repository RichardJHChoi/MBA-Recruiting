<!-- Validation failure messages -->
<% if @interaction.errors.any? %>
<% @interaction.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<div class="page-header">
  <h3>Add Interaction</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_interaction" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for recruiter name -->
      <div class="form-group">
        <label for="rec_name" class="control-label">
          Recruiter's Name
        </label>

        <select name="rec_name">
          <% recruiter.each do |recruiter| %>
          <option value="<%= recruiter.id %>"> <%= recruiter.rec_name %> </option>
          <% end %>
        </select>
      </div>

      <!-- Label and input for Interaction Type -->
      <div class="form-group">
        <label for="int_type" class="control-label">
          Interaction Type
        </label>

        <select name="int_type">
          <% @interaction_types.each do |type| %>
          <option value="<%= type.id %>"> <%= type.int_type %> </option>
          <% end %>
        </select>
      </div>

      <!-- Label and input for int_score -->
      <div class="form-group">
        <label for="int_score" class="control-label">
          Interation Score
        </label>

        <input type="integer" id="int_score" name="int_score" placeholder="Int score" class="form-control" value="<%= @interaction.int_score %>">
      </div>

      <!-- Label and input for school_affinity -->
        <input type="hidden" id="school_affinity" name="school_affinity" value= <% @interaction.school_affinity %>>
      


      <button class="btn btn-success">
        Create Interaction
      </button>
      or
      <a href="/interactions">Cancel</a>
    </form>
  </div>
</div>
