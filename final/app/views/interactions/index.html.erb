<div class="page-header">
  <h1>
    Interactions
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Recruiter's Name</th>
        <th>Interaction Type</th>
        <th>Interaction Score</th>
        <th>School Affinity</th>
        <th>Comments</th>
        <th>Actions</th>
      </tr>

      <% @interactions.each do |interaction| %>
      <tr>
        <td><%= interaction.rec_name %></td>
        <td><%= interaction.int_type %></td>
        <td><%= interaction.int_score %></td>
        <td><%= interaction.school_affinity %></td>
        <td><%= interaction.user_comment %></td>
        <td>
          <a href="/interactions/<%= interaction.id %>" class="btn btn-primary">Show</a>
          <a href="/interactions/<%= interaction.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_interaction/<%= interaction.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
