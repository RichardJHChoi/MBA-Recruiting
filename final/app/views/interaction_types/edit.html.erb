<!-- Validation failure messages -->
<% if @interaction_type.errors.any? %>
  <% @interaction_type.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Interaction Type #<%= @interaction_type.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_interaction_type/<%= @interaction_type.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for int_type -->
      <div class="form-group">
        <label for="int_type" class="control-label">
          Int type
        </label>

        <input type="text" id="int_type" name="int_type" placeholder="Int type" class="form-control" value="<%= @interaction_type.int_type %>">
      </div>

      <button class="btn btn-warning">
        Update Interaction Type
      </button>
      or
      <a href="/interaction_types/<%= @interaction_type.id %>">Cancel</a>
    </form>
  </div>
</div>
